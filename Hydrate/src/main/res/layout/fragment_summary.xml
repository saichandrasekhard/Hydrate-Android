<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context="com.underdog.hydrate.SummaryActivity$SummaryFragment">

    <LinearLayout
        android:id="@+id/adLayoutSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/averageConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adLayoutSummary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:text="@string/averageConsumption"
        android:textColor="@color/primary"
        android:textSize="@dimen/today_label_size"
        android:textStyle="bold"
        android:elevation="@dimen/elevate" />

    <ListView
        android:id="@+id/summaryListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/averageConsumption"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"></ListView>

</RelativeLayout>