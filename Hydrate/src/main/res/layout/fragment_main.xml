<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.underdog.hydrate.HomeScreenFragment"
    android:elevation="@dimen/elevate">

    <LinearLayout
        android:id="@+id/mainLinearHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:elevation="@dimen/elevate"
        android:focusable="false">

        <TextView
            android:id="@+id/hello_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="@dimen/hello_user_label_size" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/addSubScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainLinearHello"
        android:layout_centerHorizontal="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/addSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/addWater1Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/add_water1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_menu_home_glass_1"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/addWaterText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sample"
                    android:elevation="@dimen/elevate" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater2Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/add_water2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_menu_home_glass_2"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/addWaterText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sample"
                    android:elevation="@dimen/elevate" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater3Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/add_water3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_menu_home_glass_3"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/addWaterText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sample"
                    android:elevation="@dimen/elevate" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater4Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/add_water4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_menu_home_glass_4"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/addWaterText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sample"
                    android:elevation="@dimen/elevate" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater5Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/add_water5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_menu_home_glass_5"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/addWaterText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sample"
                    android:elevation="@dimen/elevate" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/editCups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:drawable/ic_menu_edit"
                android:visibility="gone" />

            <Button
                android:id="@+id/sub_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="decreaseWater"
                android:text="@string/sub_water"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/add_water_button_dim"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/adLayoutMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dayEvents"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/adLayoutMain"
        android:layout_alignParentRight="true"
        android:layout_below="@id/addSubScroll"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/dateViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_view_margin"
            android:layout_marginTop="@dimen/list_view_margin"
            android:background="@color/white"
            android:orientation="horizontal"
            android:elevation="@dimen/elevate">

            <ImageButton
                android:id="@+id/prev"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="0dp"
                android:src="@drawable/ic_prev"
                android:elevation="@dimen/elevate" />

            <ImageButton
                android:id="@+id/next"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="0dp"
                android:src="@drawable/ic_next"
                android:elevation="@dimen/elevate" />

            <RelativeLayout
                android:id="@+id/calender_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <ImageButton
                    android:id="@+id/calenderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/ic_calendar_button"
                    android:elevation="@dimen/elevate"
                    android:translationZ="5dp" />

                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/calenderButton"
                    android:layout_toRightOf="@id/calenderButton"
                    android:text="Today"
                    android:textSize="@dimen/today_label_size" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mainRelativeWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/water_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="61dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/water_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_status"
                    android:textColor="@color/blue2"
                    android:textSize="@dimen/water_status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/water_glass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginStart="@dimen/drink_summary_horizontal_dim_units"
                    android:text="@string/water_glasses"
                    android:textSize="@dimen/water_unit"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/water_quantity_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="50dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/water_quantity_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_quantity_status"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/water_status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginLeft="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginRight="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginStart="@dimen/drink_summary_horizontal_dim_units"
                    android:text="/"
                    android:textSize="@dimen/water_status"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/water_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_quantity_status"
                    android:textColor="@color/blue2"
                    android:textSize="@dimen/water_status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/water_quantity_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginStart="@dimen/drink_summary_horizontal_dim_units"
                    android:text="@string/water_units"
                    android:textSize="@dimen/water_unit"
                    android:textStyle="italic" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_view_margin"
            android:background="@color/white"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="0dp"
            android:text="Drink Log"
            android:elevation="@dimen/elevate" />

        <ListView
            android:id="@+id/dayLog"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/mainRelativeWater" >
        </ListView>
    </LinearLayout>

</RelativeLayout>