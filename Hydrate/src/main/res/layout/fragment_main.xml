<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:elevation="@dimen/elevate"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.underdog.hydrate.MainActivity$HomeScreenFragment">

    <LinearLayout
        android:id="@+id/mainLinearHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:elevation="@dimen/elevate"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/hello_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="@dimen/hello_user_label_size" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/addSubScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainLinearHello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/addSub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/addWater1Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_water1"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="increaseWater"
                    android:src="@drawable/ic_menu_home_glass_1"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim" />

                <TextView
                    android:id="@+id/addWaterText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="@dimen/elevate"
                    android:text="Sample" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater2Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_water2"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@drawable/ic_menu_home_glass_2"
                    android:clickable="true"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim" />

                <TextView
                    android:id="@+id/addWaterText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="@dimen/elevate"
                    android:text="Sample" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater3Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_water3"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_menu_home_glass_3"
                    android:clickable="true"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim" />

                <TextView
                    android:id="@+id/addWaterText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="@dimen/elevate"
                    android:text="Sample" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater4Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_water4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_menu_home_glass_4"
                    android:clickable="true"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/add_water_button_dim" />

                <TextView
                    android:id="@+id/addWaterText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="@dimen/elevate"
                    android:text="Sample" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addWater5Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_water5"
                    android:layout_width="65dp"
                    android:layout_height="62dp"
                    android:background="@drawable/ic_menu_home_glass_6"
                    android:clickable="true"
                    android:onClick="increaseWater"
                    android:textAlignment="center"
                    android:textColor="@android:color/primary_text_light"

                    android:textSize="@dimen/add_water_button_dim" />

                <TextView
                    android:id="@+id/addWaterText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="@dimen/elevate"
                    android:text="Sample" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/editCups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:drawable/ic_menu_edit"
                android:visibility="gone" />

            <Button
                android:id="@+id/sub_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="decreaseWater"
                android:text="@string/sub_water"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/add_water_button_dim"
                android:visibility="gone" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_drink_water"
                android:text="Sample"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/adLayoutMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/dayEvents"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/adLayoutMain"
        android:layout_alignParentRight="true"
        android:layout_below="@id/addSubScroll"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/dateViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_view_margin"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:elevation="@dimen/elevate"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/prev"
                style="?android:attr/actionButtonStyle"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:elevation="@dimen/elevate"
                android:paddingEnd="0dp"

                android:src="@drawable/ic_prev" />

            <ImageButton
                android:id="@+id/next"
                style="?android:attr/actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:elevation="@dimen/elevate"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="0dp"
                android:src="@drawable/ic_next" />

            <RelativeLayout
                android:id="@+id/calender_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/calenderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/dateView"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:elevation="@dimen/elevate"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_calendar_button"
                    android:tint="@color/primary"
                    android:translationZ="5dp" />

                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/calenderButton"
                    android:layout_toRightOf="@id/calenderButton"
                    android:text="Today"
                    android:textSize="@dimen/today_label_size" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mainRelativeWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/water_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="61dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/water_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_status"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/water_status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/water_glass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginStart="@dimen/drink_summary_horizontal_dim_units"
                    android:text="@string/water_glasses"
                    android:textSize="@dimen/water_unit"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/water_quantity_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="50dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/water_quantity_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_quantity_status"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/water_status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginLeft="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginRight="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginStart="@dimen/drink_summary_horizontal_dim_units"
                    android:text="/"
                    android:textSize="@dimen/water_status"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/water_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_quantity_status"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/water_status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/water_quantity_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/drink_summary_horizontal_dim_units"
                    android:layout_marginStart="@dimen/drink_summary_horizontal_dim_units"
                    android:text="@string/water_units"
                    android:textSize="@dimen/water_unit"
                    android:textStyle="italic" />
            </LinearLayout>

            <!--<ProgressBar-->
            <!--android:id="@+id/progressBar3"-->
            <!--style="?android:attr/progressBarStyleHorizontal"-->
            <!--android:progressTint="@color/danger"-->
            <!--android:progressBackgroundTint="@color/danger"-->
            <!--android:scaleY="4"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:progress="15"-->

            <!--/>-->

        </RelativeLayout>

        <!--<ProgressBar-->
        <!--android:id="@+id/waterProgress"-->
        <!--style="@style/waterProgress"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:progressTint="@color/danger"-->
        <!--android:progressBackgroundTint="@color/danger"-->
        <!--android:background="@color/white"-->
        <!--android:progress="0" />-->
        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/waterProgress"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:progress="50"
            android:scaleY="2"
            app:mpb_progressStyle="horizontal" />

        <TextView
            android:id="@+id/logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/elevate"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="0dp"
            android:text="Drink Log" />

        <ListView
            android:id="@+id/dayLog"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/mainRelativeWater" />
    </LinearLayout>

</RelativeLayout>